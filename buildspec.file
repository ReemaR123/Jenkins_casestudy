version: 0.2

phases:
  install:
    runtime-versions:
      docker: latest
    commands:
      - apt update && apt install -y apache2

  build:
    commands:
      - echo "Building the application..."
      - docker build -t website-app .
  
  post_build:
    commands:
      - echo "Build completed."

artifacts:
  files:
    - '**/*'
